/* 水平间距 */
.settings-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}
.settings-group {
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.settings-title {
  font-size: 28rpx;
  color: #888;
  padding: 20rpx 0;
}
.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}
.settings-item text {
  font-size: 30rpx;
  color: #333;
}
.logout-btn {
  margin-top: 40rpx;
  background-color: #ff3b30;
  color: #ffffff;
}

